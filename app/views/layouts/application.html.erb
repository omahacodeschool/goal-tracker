<!DOCTYPE html>
<html>
<head>
  <title>GoalTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<header class="clearfix">
  <div class="logo">
    <span>Goal Tracker</span>
  </div>
  
  <!-- <div class="title">
    <h1>Goal-Tracker</h1>
  </div> -->

  <div id="nav">
    <% if current_user %>
      <p><%= link_to "Edit Profile", edit_user_path(current_user.id) %> |</p>
      <p><%= link_to "Logout", :logout, method: :post %></p>
    <% else %>
      <p><%= link_to "Register", new_user_path %> |</p>
      <p><%= link_to "Login", :login %></p>
    <% end %>
  </div>
  
</header>
  <body>
    <div>
      <p id="notice"><%= flash[:notice] %></p>
      <p id="alert"><%= flash[:alert] %></p>
    </div>
    <div class="content">

      <%= yield %>
    
    </div>
  </body>

<footer>  
</footer>

</html>
