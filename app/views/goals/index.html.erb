<div class="goalListing">
  <h1>Listing goals</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Goal value</th>
      <th>User</th>
      <th>Completed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.title %></td>
      <td><%= goal.goal_value %></td>
      <td><%= goal.user_id %></td>
      <td><%= goal.completed %></td>
      <td><%= link_to 'Show', goal %></td>
      <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
      <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New Goal', new_goal_path %>
</div>